<h1>ログインページ</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <%= form_tag("/login") do %>
                <p>メールアドレス</p>
                <input name="email" value="<%= @email %>">
                <p>パスワード</p>
                <input type="password" name="user_password" value="<%= @password %>">
                <input type="submit" value="ログイン">
            <% end %>
        </div>
    </div>
</div>