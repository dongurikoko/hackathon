<div class="main users-edit">
    <div class="container">
        <div class="form-heading">プロフィール編集</div>
            
            <div class="form users-form">
                <div class="form-body">
                    <%= form_tag("/users/#{@user.id}/update", {multipart: true}) do %>
                        <p>ユーザー名</p>
                        <input name="user_name" value="<%= @user.user_name %>">
                        <p>画像</p>
                        <input name="profile_image" type="file">
                        <p>自己紹介文</p>
                        <input name="introduction" value="<%= @user.introduction %>">
                        <input type="submit" value="保存">
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>